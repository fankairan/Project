/* pages/shoplist/shoplist.wxss */
page{
  background-color: #F5FCF0;
}

.list-row{
  width: 94%;
  margin: 25rpx auto;
  display: flex;
  flex-wrap: wrap;
  border-radius: 20rpx;
  box-shadow: 0px 0px 3px 2px #ddd;
  overflow: hidden;

}

.list-row .list-col{
  width: 50%;
  height: 450rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: top;
  align-items: left;
  border-right: 6rpx solid #eee;
  border-bottom: 6rpx solid #eee;
  overflow: hidden;
}

.list-row .list-col:nth-child(2n){
  border-right: none; 
}

/* 商品图片 */
.list-row .list-col .col-img{
  width: 300rpx;
  height: 300rpx;
  margin: 0 auto;
  border-radius: 30%;
}

/* 商品信息 */
.list-row .list-col .col-text{
  display: flex;
  flex-direction: column;
  align-items: left;
  position: relative;
}

/* 商品标题 */
.col-text .col-tit{
  width: 320rpx;
  margin: 10rpx;
  margin-bottom: 0rpx;
  font-size: 13px;
  color: #555;
}

/* 现价样式 */
.col-text .new_price{
  margin-left: 10rpx;
  font-size: 16px;
  font-weight: 600;
  color: #f10215;
}

/* 原价样式 */
.col-text .old_price{
  margin-left: 10rpx;
  font-size: 12px;
  text-indent: 20rpx;
  color: #aaa;
  text-decoration: line-through;
}

/* 评价样式 */
.col-text .evaluate{
  font-size: 11px;
  font-style: italic;
  color: #aaa;
  margin-left: 20rpx; 
}

/* 添加购物车样式 */
.shop-box{
  position: absolute;
  right: 20rpx;
  bottom: 0rpx;
  width: 100rpx;
  height: 80rpx;
  /* background-color: #ccc; */
  display: flex;
  flex-direction: column;
}

/* 添加数量按钮 */
.shop-box .shop-count{
  width: 100%;
  height: 50%;
  display: flex;
  flex-wrap: nowrap;
  /* background-color: #aaa; */
  overflow: hidden;
}

.shop-box .shop-count button{
  margin: 0rpx;
  padding: 0rpx; 
  width: 33%;
  height: 100%;
  font-size: 13px;
  text-align: center;
  line-height: 35rpx;
  background-color: #eee;
  border-radius: 0;
}

 button::after{
  border-radius: 0;
}

.shop-box .shop-count input{
  margin: 0rpx;
  padding: 0rpx; 
  font-size: 12px;
  width: 37.75rpx;
  height: 40rpx;
  min-height: 1rem;
  text-align: center;
  line-height: 40rpx;
  outline: none;
  background-color: #ddd;
}

/* 购物车按钮样式 */
.shop-box .add-cart{
  width: 100%;
  height: 50%;
  border-radius: 5rpx;
  font-size: 9px;
  text-align: center;
  line-height: 40rpx;
  background-color: #f10215;
  color: #fff;
}


