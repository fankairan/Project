<!--index.wxml-->
<view class="body">
  <!-- 轮播图 -->
  <view class="slider">
    <swiper class="swiper_list" autoplay>
      <swiper-item wx:for="{{lb_url}}" wx:key="index">
        <image src="{{item.img_url}}" lazy-load mode="sapectFill"></image>
      </swiper-item> 
    </swiper>
  </view>
  <!-- 分隔条 -->
  <view class="divider"></view>
  <!-- 九宫格 -->
  <view class="box">
    <view class="grid" wx:for="{{ic_box}}" wx:key="index">
      <image src="{{item.img_url}}" lazy-load mode="aspectFill" bindtap='handleJump' data-id="{{item.id}}"></image>
      <text>{{item.title}}</text>
    </view>
  </view>
  <!-- 分隔条 -->
  <view class="divider"></view>
   <!-- 横向滑动列表 -->
  <scroll-view scroll-x class="scroll-x">
    <view wx:for="{{list}}" wx:key="{{index}}" class="view-parent">
      <view class="view-item">{{item.txt}}</view>
    </view>
  </scroll-view>

</view>
