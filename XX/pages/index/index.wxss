/**index.wxss**/
.body{
  background-color: #F7FFFA;
}
/*  功能1：轮播图  */
.slider{
  height: 360rpx;
  width: 100%;
  display: flex;
  justify-content: center;
  padding: 18rpx 0rpx;
}
/* 修饰轮播图 样式 */
.slider swiper{
  width: 94%;
  height: 100%;
  border-radius: 20rpx;
  box-shadow: 0px 0px 3px 2px #ddd;
  overflow: hidden;
}

.slider image{
  width: 100%;
  height: 100%;
}
/* 功能2：九宫格 */
.box{
  width: 94%;
  border-radius: 20rpx;
  box-shadow: 0px 0px 3px 2px #ddd;
  overflow: hidden;
  margin: 18rpx auto;
  display: flex;
  flex-wrap: wrap;
}

.box .grid{
  width: 33.333333%;
  height: 200rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 12px;
  color: #6e6e6e;
  /* 右侧添加边框，底部添加边框 */
  border-right: 1px dotted #ddd;
  border-bottom: 1px dotted #ddd;
}

.box .grid:nth-child(3n){
  border-right: none;
}

.grid image{ 
   width: 80rpx;
   height: 80rpx;
 }


/* 功能3：分隔块 */
.divider{
  height: 30rpx;
  width: 94%;
  border-radius: 20rpx;
  margin: 0 auto;
  background-color: #C6EDAD;
}

/* 功能4：按钮 */
/* 功能4 左右滑动 */

.scroll-x{
    height:80px;
    white-space:nowrap;
    display:flex;
}
/* 隐藏scrollbar */
::-webkit-scrollbar{
    width: 0;
    height: 0;
    color: transparent;
}
.view-parent{
    display:inline-block;
}
.view-item{
    width:50px;
    height:50px;
    display:flex;
    align-items:center;
    justify-content:center;
    font-size:12px;
    background:#80CBC4;
    margin:10px;
}

