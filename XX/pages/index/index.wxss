/**index.wxss**/
.body{
  background-color: #F7FFFA;
}
/*  功能1：轮播图  */
.slider{
  height: 360rpx;
  width: 100%;
  display: flex;
  justify-content: center;
  padding: 18rpx 0rpx;
}
/* 修饰轮播图 样式 */
.slider swiper{
  width: 94%;
  height: 100%;
  border-radius: 20rpx;
  box-shadow: 0px 0px 3px 2px #ddd;
  overflow: hidden;
}

.slider image{
  width: 100%;
  height: 100%;
}
/* 功能2：九宫格 */
.box{
  width: 94%;
  border-radius: 20rpx;
  box-shadow: 0px 0px 3px 2px #ddd;
  overflow: hidden;
  margin: 18rpx auto;
  display: flex;
  flex-wrap: wrap;
}

.box .grid{
  width: 33.333333%;
  height: 200rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 12px;
  color: #6e6e6e;
  /* 右侧添加边框，底部添加边框 */
  border-right: 1px dotted #ddd;
  border-bottom: 1px dotted #ddd;
}

.box .grid:nth-child(3n){
  border-right: none;
}

.grid image{ 
   width: 80rpx;
   height: 80rpx;
 }


/* 功能3：分隔块 */
.divider{
  height: 30rpx;
  width: 94%;
  border-radius: 20rpx;
  margin: 0 auto;
  background-color: #C6EDAD;
}

/* 功能4：按钮 */

/* 功能4 甄选模块 */

.scroll-x{
    height:420rpx;
    width: 100%;
    white-space:nowrap;
    display:flex;
}
/* 隐藏scrollbar */
::-webkit-scrollbar{
    width: 0;
    height: 0;
    /* color: transparent; */
}

.view-parent{
    display:inline-block;
}

.view-item{
    position: relative;
    width:280rpx;
    height:280rpx;
    border-radius: 50%;
    border: 12rpx solid #FCBCBC;
    display:flex;
    flex-direction: column;
    align-items:center;
    justify-content:center;   
    /* background:#80CBC4; */
    margin:18px;
}

.view-item image{
    width: 280rpx;
    height: 280rpx;
    border-radius: 40%;
    
}

.view-item .sel-tit{
  position: absolute;
  z-index: 5;
  left: 50%;
  margin-left:-125rpx;
  bottom: -24px;
  width: 250rpx;
  color: #765F55;
  font-size:12px;
}

.view-item .appraise{
  position: absolute;
  z-index: 5;
  font-size:11px;
  color: #f10215;
  font-style: italic;
  bottom: -75rpx;
}

