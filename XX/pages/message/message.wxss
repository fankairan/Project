/* pages/message/message.wxss */
/* 1:组件灰色背景 */
page{
  background-color: #F5FCF0;
  
}
/* 2:卡片 */
.card{
  background-color: #fff;
  border: 1px solid #ddd;
  border-radius: 25rpx;
  margin: 60rpx 20rpx;
  padding: 30rpx;
  display: flex;    /*设置弹性布局*/
  flex-direction: column;  /*按列排放*/
}
/* 3:标题 */

/* 4:日期 */
.card-date{
  font-size: 14px;
  color: #aaa;
  padding-bottom: 20rpx;
  margin-bottom: 20rpx;
  border-bottom: 1rpx solid #ddd;
}
/* 5:图片 */
.card-img{
 border-radius: 15rpx;
}
/* 6:描述 */
.card-desc{
  font-size: 14px;
  color: #666;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #ddd;
  margin: 20rpx 0;
}
/* 7:查看详细 */
.card-rad{
  font-size: 14px;
  color: #6C7E62;
}