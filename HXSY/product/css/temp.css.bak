
#content{
    width: 1000px;
    height: auto;
    margin: 0 auto 100px;
    background: url(../img/main/main_content.jpg) no-repeat 0px 0px;
    position: relative;
}
/* --------  新闻中心  -------- */
.news_center {
    width: 740px;
    position: relative;
    margin-left: 260px;
}

/* -----  新闻中心  头部----- */
.news_center .news_header{
    width: 740px;
    height: 117px;
    position: relative;
    background: url(../img/temp/tit_news.jpg) no-repeat;
}

.news_center .news_header .loc{
    position: absolute;
    top: 89px;
    left: 50px;
    color: rgb(183, 183, 183);
    font: 12px/18px 宋体;
}

.news_center .news_header .loc a{
    color: #b7b7b7;
}

.news_center .news_header .loc a:hover{
    text-decoration: underline;
}

.news_center .news_header .loc span{
    color: #fff;
    font-weight: bold;
}

/* -----  新闻中心  主体内容----- */
.news_center div.news{
    border: 1px solid #000;
    background: #fff;
    overflow: hidden;
}

.news_center div.area{
    width: 636px;
    min-height: 978px;
    padding-top: 33px;
    font-size: 12px;
    margin: 0 auto;
  
}

.news_center div.news h1.title{
    padding: 20px 0px 10px 0px;
    color: #1d203c;
    font: bold 26px/1.5 "Microsoft YaHei";
    border-bottom: 1px dotted #919096;
    text-align: center;
}

.news_center div.news div.area .infos{
    padding-top: 10px;
    height: 60px;
    color: #717171;
}

div.news div.area .infos span{
    float: left;
    height: 16px;
    line-height: 16px;
}

div.news div.area .infos .time_1{
    margin-left: 92px;
    width: 16px;
    background: url(../img/temp/news_sprite.png) no-repeat 0px 0px;
}

div.news div.area .infos .time_2{
    margin-left: 7px;

}

div.news div.area .infos .font_1{
    margin-left: 15px;
    width: 10px;
    height: 15px;
    background: url(../img/temp/news_sprite.png) no-repeat 0px -20px;
}

div.news div.area .infos .font_2{
    margin-left: 7px;
}

div.area .infos .font_2 a{
    padding: 3px 4px;
    color: #717171;
}
div.news div.area .font_2 a.act {
    background: #da4111;
    color: #ffffff;
}

div.news div.area .share_1{
    margin-left: 30px;
}

div.area .share_2 a{
    font-size: 12px;
    height: 16px;
    line-height: 16px;
    font-family: tahoma,arial,宋体;
    display: inline-block;
    float: left;
    margin-right: 5px;
    width: 20px;
    text-indent: -9999em;
    cursor: pointer;
    background: url(../img/temp/share_16.png) no-repeat;
}

div.news div.area .share_2 a.s_xlwb{
    background-position: 0px -48px;
}

div.news div.area .share_2 a.s_txwb{
    background-position: 0px -168px;
}

div.news div.area .share_2 a.s_qzone{
    background-position: 0px -8px;
}

div.news div.area .share_2 a.s_renren{
    background-position: 0px -128px;
}

div.news div.area .share_2 a.s_kxin{
    background-position: 0px -208px;
}

